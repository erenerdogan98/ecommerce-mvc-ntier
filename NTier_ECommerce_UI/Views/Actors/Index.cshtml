@using NTier_ECommerce_Entities
@* Defining Model*@

@model IEnumerable<Actors>

@* Define ViewData *@
@{
    ViewData["Title"] = "Actors";
}

@* Write Code *@

<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(x => x.ProfileUrl)</th>
                    <th>@Html.DisplayNameFor(x => x.NameSurname)</th>
                    <th>@Html.DisplayNameFor(x => x.Biography)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.ProfileUrl" alt="@item.NameSurname" style="max-width: 150px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(x => item.NameSurname)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(x => item.Biography)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit</a>
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Detalils</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>